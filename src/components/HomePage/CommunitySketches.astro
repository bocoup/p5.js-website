---
import { getCurrentLocale, useTranslations } from "@i18n/utils";
import LinkButton from "@components/LinkButton/index.astro";
import SketchThumb from "./SketchThumb.astro";

interface Props {
  headerText: string;
}

const { headerText } = Astro.props;

const currentLocale = getCurrentLocale(Astro.url.pathname);
const t = await useTranslations(currentLocale);
---

<div class="grid">
  <h2>{headerText}</h2>
  <LinkButton variant="link" url="/community">{t("Community")}</LinkButton>
  <SketchThumb number={3} class="" />
  <SketchThumb number={4} class="" />
  <SketchThumb number={5} class="" />
  <SketchThumb number={6} class="" />
</div>
