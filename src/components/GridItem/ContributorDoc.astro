---
import { removeLocaleAndExtension } from "@/src/pages/_utils";
import type { CollectionEntry } from "astro:content";

interface Props {
  item: CollectionEntry<"contributor-docs">;
}

const { item } = Astro.props;
---

<a href={`/contribute/${removeLocaleAndExtension(item.id)}`}>
  <div class="text-lg mt-xs bg-bg-blue h-28 p-4 mb-2 text-center">
    {item.data.title}
  </div>
  <div class="text-sm text-ellipsis">
    {item.data.description}
  </div>
</a>
