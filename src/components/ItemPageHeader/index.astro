---
const pathname = Astro.url.pathname;

const splitPathname = pathname.split("/");
const item = splitPathname[splitPathname.length - 1];
const topic = splitPathname[1];

const { title } = Astro.props;
---

<div class="p-md pt-2xl pb-0">
  <div class="[&>*]:pr-sm pb-xs">
    <a href=`/${topic}`>{topic}</a>
    <span>{">"}</span>
    <span>title</span>
  </div>
  <h1>{title}</h1>
</div>
